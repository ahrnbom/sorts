Bootstrap: docker
From: nvidia/cuda:10.2-cudnn7-devel-ubuntu18.04

%environment
    export LANG=C.UTF-8
    export LC_ALL=C.UTF-8
    
%files
    sort /sort
    
%post
    apt-get update --fix-missing && DEBIAN_FRONTEND=noninteractive apt-get install -y tzdata && apt-get install -y python3-dev python3-pip python3-opencv ffmpeg python3-tk git && apt-get clean
    python3 -m pip install -U pip
    python3 -m pip install imageio scikit-image line_profiler imageio-ffmpeg torch torchvision pytorch-model-summary munkres pytest motmetrics google-colab
    python3 -m pip install -r /sort/requirements.txt
    python3 -m pip install cython && python3 -m pip install -U 'git+https://github.com/cocodataset/cocoapi.git#subdirectory=PythonAPI'
    python3 -m pip install detectron2 -f \
        https://dl.fbaipublicfiles.com/detectron2/wheels/cu111/torch1.8/index.html
    echo 'alias prof="kernprof -l -v"' >> /etc/bash.bashrc
    echo 'alias python="python3"' >> /etc/bash.bashrc
    
%runscript
    echo "> Inside Singularity now!"
    exec ./start_in_singularity.sh "$@"
